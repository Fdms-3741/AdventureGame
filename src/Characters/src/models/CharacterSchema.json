{
    "$schema": "https://json-schema.org/draft-07/schema",
    "name":"Player",
    "description":"Information regarding characters",
    "type":"object",
    "properties":{
        "id":{"type":"number"},
        "player_id":{"type":"number"},

        "name":{"type":"string"},
        "description":{"type":"string"},
        "image":{"type":"string"},

        "status":{
            "type":"object",
            "properties":{
                "level":{"type":"integer","minimum": 1,"maximum": 10},
                "lives":{"type":"integer", "minimum": 0,"maximum": 5}
            },
            "required":["level","alive"]
        },

        "attributes": {
            "type":"object",
            "properties":{
                "strength":{"type":"integer","minimum": 0,"maximum": 5},
                "dexterity":{"type":"integer", "minimum": 0, "maximum": 5},
                "inteligence":{"type":"integer", "minimum": 0, "maximum": 5}
            },
            "required":["strength","dexterity","inteligence"]
        }
    },
    "required":["id","player_id","name","description","status","attributes"]
}